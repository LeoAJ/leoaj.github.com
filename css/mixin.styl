border-radius(n)
	-webkit-border-radius n
	-moz-border-radius n
	-o-border-radius n
	border-radius n

border-radius-top(n)
	-moz-border-radius-topleft n n
	-moz-border-radius-topright n n
	border-top-left-radius n n
	border-top-right-radius n n

border-radius-bottom(n)
	-moz-border-radius-bottomleft n n
	-moz-border-radius-bottomright n n
	border-bottom-left-radius n n
	border-bottom-right-radius n n

border-radius-right(n)
	-moz-border-radius-topright n n
	-moz-border-radius-bottomright n n
	border-top-right-radius n n
	border-bottom-right-radius n n

shadow()
	-webkit-box-shadow: 0 0 3px#888
	-moz-box-shadow: 0 0 3px #888
	box-shadow: 0 0 3px #888

two-D-rotate()
	-webkit-transform rotate(-15deg)
	-moz-transform rotate(-15deg)
	-ms-transform rotate(-15deg)
	-o-transform rotate(-15deg)
	transform rotate(-15deg)

// hover enlarge
enlarge()
	-webkit-transform scale(1.3)
	-moz-transform scale(1.3)
	-o-transform scale(1.3)
	transform scale(1.3)

speed()
	-webkit-transition all .3s ease-in-out
	-moz-transition all.3s ease-in-out
	-o-transition all .3s ease-in-out
	transition all .3s ease-in-out

// 3d rotate
three-D()
	-webkit-transition all 300ms ease
	-moz-transition all 300ms ease
	-o-transition all 300ms ease
	transition all 300ms ease

three-D-perspective()
	-webkit-perspective 400px
	-moz-perspective 400px
	-o-perspective 400px
	perspective 400px

three-D-rotate()
	-webkit-transform translate3d(0px,0px,-30px) rotateX(90deg)
	-moz-transform translate3d(0px,0px,-30px) rotateX(90deg)
	-o-transform translate3d(0px,0px,-30px) rotateX(90deg)
	transform translate3d(0px,0px,-30px) rotateX(90deg)

three-D-origin()
	-webkit-transform-origin 50% 0
	-moz-transform-origin 50% 0
	-o-transform-origin 50% 0
	transform-origin 50% 0

three-D-style()
	-webkit-transform-style preserve-3d
	-moz-transform-style preserve-3d
	-o-transform-style preserve-3d
	transform-style preserve-3d

three-D-rotateBack()
	-webkit-transform translate3d(0px,-20%,0px) rotateX(-90deg)
	-moz-transform translate3d(0px,-20%,0px) rotateX(-90deg)
	-o-transform translate3d(0px,-20%,0px) rotateX(-90deg)
	transform translate3d(0px,-20%,0px) rotateX(-90deg)