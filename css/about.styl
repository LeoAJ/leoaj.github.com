@import 'template.styl'
@import 'nav.styl'
@import 'footer.styl'
@import 'page.styl'
@import 'constant.styl'
@import 'mixin.styl'

// general
h3
	margin-bottom 15px

// top bar
.image
	position relative
	width W
	height 120px
	border-radius-top(5px)
	background-image url(img/earth.jpg)

img.icon,
img.work
	position absolute

img.icon
	top 5px
	left 70px
	width 110px
	height 110px
	border-radius(60px)

img.work
	top 65px
	left 197px
	width 25px
	height 25px

.current,
.name
	position absolute
	color white

.name
	top 25px
	left 200px
	font-size 24px

.current
	top 68px
	left 227px
	font-size 14px

.work
	background-image url(img/work.png)

// socail bar
.social
	background #E8E8E8
	height 40px
	width W

.socialIcon
	float right

.socialIcon
	&:hover
		two-D-rotate()

#githubImg
	border-radius(5px)

#github,
#twitter,
#linkedin
	margin-right 5px
	margin-left 5px

#twitter,
#linkedin
	margin-top 2px

#github
	margin-top 4px

// content
.content
	margin HeaderHeight + 40px auto

.detail
	position relative
	background #D0D0D0
	height 600px
	border-radius-bottom(5px)

.me,
.skill,
.specialties
.education
.contact
	position absolute
	border-radius(5px)
	border-top 5px solid
	background white
	padding 15px

.me,
.skill,
.education
	top 30px

.education
.contact
	width 295px
	left 660px

.skill,
.specialties
	left 340px
	width 275px

// about me
.me
	border-top-color RED
	left 20px
	width 275px
	height 450px

// skills
.skill
	border-top-color BLUE
	font-size 13px
	height 200px

.skillItem
	display inline-block
	cursor pointer
	margin 3px 2px
	padding 3px 10px
	background gray
	border-radius(3px)
	&:hover
		speed()
		enlarge()

// specialties
.specialties
	top 280px
	height 200px
	border-top-color PURPLE

.specialtiesList
	position relative
	font-size 14px
	three-D-perspective()

.specialtiesList span
	display block
	margin 5px
	padding 3px 3px
	background gray
	border-radius(3px)
	three-D()
	three-D-origin()
	three-D-style()
	&:hover
		background PURPLE
		three-D-rotate()
	&:after
		display block
		content attr(data-title)
		position absolute
		color white
		background PURPLE
		width 260px
		top 30px
		left 0
		margin-top 3px
		padding 3px
		three-D-origin()
		three-D-rotateBack()
		border-radius(3px)

// education
.education
	height 120px
	border-top-color GREEN

.school
	font-size 13px
	font-weight bold

.period
	font-size 11px
	color #686868

// contact
.contact
	top 220px
	height 100px
	border-top-color ORANGE

.contact ul
	font-size 12px