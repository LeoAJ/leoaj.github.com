.image
	position relative
	width W
	height 120px
	border-radius-top(5px)
	background-image url(../img/earth.jpg)

img.icon,
img.work
	position absolute

img.icon
	top 5px
	left 70px
	width 110px
	height 110px
	border-radius(60px)

img.work
	top 65px
	left 197px
	width 25px
	height 25px

.current,
.name
	position absolute
	color white

.name
	top 25px
	left 200px
	font-size 24px

.current
	top 68px
	left 227px
	font-size 14px

.work
	background-image url(../img/work.png)

.social
	background #E8E8E8
	height 40px
	width W

.detail
	position relative
	background #D0D0D0
	height 500px
	border-radius-bottom(5px)

.me,
.skill,
.education
	position absolute
	border-radius(5px)
	border-top 5px solid
	width 275px
	background white
	top 30px
	padding 15px	

.me
	border-top-color RED
	left 25px
	height 400px

.skill
	left 365px
	border-top-color GREEN
	height 100px

.education
	left 680px
	border-top-color BLUE
	height 100px

ul
	margin-top 5px
